@{
    ViewBag.Title = "Đăng nhập";
}

<div class="login-box" ng-controller="MenuController">
  <div class="login-logo">
    <a href="#"><b>Transport Management System</b></a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"></p>

    <form >
      <div class="form-group has-feedback">
        <input type="text" class="form-control" name="username" placeholder="Tài khoản" ng-model="LoginInfo.Username">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" name="password" placeholder="Mật khẩu" ng-model="LoginInfo.Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-7">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox" ng-model="LoginInfo.Remember"> Nhớ mật khẩu
            </label>
          </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-5">
          <button class="btn btn-primary btn-block btn-flat" ng-click="LogIn()">Đăng nhập</button>
        </div>
        <!-- /.col -->
      </div>
    </form>


    @*<a href="#">I forgot my password</a><br>*@

  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->


<script src="@Url.Content("~/Scripts/libs/iCheck/icheck.min.js")"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
