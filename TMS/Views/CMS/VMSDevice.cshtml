        var startup_object = @Model.objectid;
        if(startup_object > 0){
            var loadobject = self.FormObject.GetObject(startup_object); //GetObject(value, colname)

            //check object exist
            if(loadobject.Id){
                //morefields
                //TODO

                self.ShowDetailObject(loadobject);
            }
        }
    },200);
}
]);

</script>

