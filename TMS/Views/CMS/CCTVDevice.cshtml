<script type="text/javascript">
    CHUNOApp.controller('controller_T_TMS_CCTV_Device', ['$scope', 'NgTableParams', '$controller', '$q', '$timeout',
    function ($scope, NgTableParams, $controller, $q, $timeout) {
        $controller('CommonController', { $scope: $scope });
        $scope.masterController = this;

        var self = this;
        self.ObjectTitle = "Thiết bị CCTV";
        //========================================================
        //Controller Properties
    
        self.isLoadingImage = false;

        self.IsShowDetail = false;
        self.CurrentTab = 'T_TMS_CCTV_Device';

        $scope.DetailAPI = {};
        //======================================
        //form config
        var config = new DataFormConfig();
        {
            config.dataobject = 'T_TMS_CCTV_Device';
            config.columns = ['Id',
    'Code'  ,
    'Name'  ,
    'CompanyName'  ,
    'ModuleName'  ,
    'DeviceTyped' ,
    'DeviceTyped.Name , DeviceTyped_Name' ,
    'DeviceGroupId' ,
    'DeviceGroupId.Name , DeviceGroupId_Name' ,
    'SetupDate'  ,
    'SetupInfo'  ,
    'SetupSpot'  ,
    'ZoneId' ,
    'ZoneId.Name , ZoneId_Name' ,
    'Lng' ,
    'Lat' ,
    'IPAddress'  ,
    'ConnectPort'  ,
    'IsUse'  ,
            ].join(';'); //ko dc
            config.sort = 'T_TMS_CCTV_Device.Id DESC';
            config.condition = '(T_TMS_CCTV_Device.IsActive = 1 )';
            config.action = 'get'; //getall/get
            config.startrow = 0;
            config.endrow = 10;
        }

        self.FormConfig = config;
        self.FormConfig._CanCreate = true;
        self.FormConfig._CanUpdate = true;
        self.FormConfig._CanDelete = true;

        //form object
        self.NewObject = function () {
            return {
                Id: 0,   
                Code : '' ,
                Name : '' ,
                CompanyName : '' ,
                ModuleName : '' ,
                DeviceTyped : '' , DeviceTyped_Name : '' ,
                DeviceGroupId : '' , DeviceGroupId_Name : '' ,
                SetupDate : '' ,
                SetupInfo : '' ,
                SetupSpot : '' ,
                ZoneId : '' , ZoneId_Name : '' ,
                Lng : '' ,
                Lat : '' ,
                IPAddress : '' ,
                ConnectPort : '' ,
                IsUse : '' ,
                Version: 0,
                IsActive: true
            };
        }
        self.DataObject = self.NewObject();

        self.FormObject = new DataObject('T_TMS_CCTV_Device', $scope);
        self.FormObject.SetObject(self.DataObject);
        //======================================
        self.ClearForm = function () {       
            self.DataObject = self.NewObject();
        }

        self.AddItem = function () {
            //create newobject
            var newobject = self.NewObject();

            //============================================
            self.ShowDetailObject(newobject);
        };

        self.EditObject = function (object, rowForm) {
            //load object
            var loadobject = self.FormObject.GetObject(object.Id); //GetObject(value, colname)
             
            //copy object
            var copyobject = self.NewObject();
            //copyobject có thuộc tính nào thì object mới đưa vào
            CommonHelper.CopyFields(loadobject, copyobject);
        
            //morefields
            //TODO
            copyobject.DeviceTyped_Name = object.DeviceTyped_Name;
            copyobject.DeviceGroupId_Name = object.DeviceGroupId_Name;
            copyobject.ZoneId_Name = object.ZoneId_Name;
            //============================================
            self.ShowDetailObject(copyobject);
        }

        self.ShowDetailObject = function(object){
            //============================================
            //check permission
            object._CanUpdate = self.FormConfig._CanUpdate;//item._CanUpdate;
            object._CanDelete = self.FormConfig._CanDelete;

            //====================================
